<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivgameImage"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:contentDescription="@string/game_image"
        android:background="@drawable/rounded_box_image"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp">

        <!-- Game Name -->
        <TextView
            android:id="@+id/tvgameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Name"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"/>

        <!-- Optimize Button -->
        <Button
            android:id="@+id/btnOptimize"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:text="Optimize"
            android:textAlignment="center"
            android:textSize="14sp"
            android:background="@drawable/rounded_box_image"
            android:layout_below="@id/tvgameName"
            android:layout_marginTop="8dp"/>

        <!-- Container for Image Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

            <!-- Edit ImageButton -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_ediit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/edit"/>

            <!-- Delete ImageButton -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="100dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/delete"/>
        </LinearLayout>

        <!-- Check Icon -->
        <ImageView
            android:id="@+id/ivCheck"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:layout_below="@id/tvgameName"
            android:layout_marginStart="4dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@id/btnOptimize"
            android:visibility="visible"/>
    </RelativeLayout>
</LinearLayout>
