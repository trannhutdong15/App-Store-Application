<?xml version="1.0" encoding="utf-8"?>
<!-- rounded_button.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#17181E" /> <!-- Background color of the button -->
    <stroke
        android:width="3dp"
        android:color="#85128E" /> <!-- Stroke color -->
    <corners android:radius="26dp" /> <!-- Corner radius to make the button rounded -->
    <padding android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
    <size
        android:width="200dp"
        android:height="24dp"/>
</shape>



