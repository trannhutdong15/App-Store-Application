<?xml version="1.0" encoding="utf-8"?>
<!-- rounded_button.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="#17181E" /> <!-- Background color of the button -->
    <stroke
        android:width="2dp"
        android:color="#85128E" /> <!-- Stroke color -->
    <corners android:radius="20dp" /> <!-- Corner radius to make the button rounded -->
    <padding
        android:left="20dp"
        android:right="20dp" />
    <size
        android:width="400dp"
        android:height="48dp"/>
</shape>



